{
  "manifest_version": 3,
  "name": "tapir-headers",
  "version": "0.0.1",
  "description": "Tapir Headers allow manipulation of request and response headers",
  "homepage_url": "https://github.com/andersjanmyr/tapir-headers",
  "icons": {
    "16": "icons/tapir-16.png",
    "32": "icons/tapir-32.png",
    "48": "icons/tapir-48.png",
    "128": "icons/tapir-128.png"
  },
  "permissions": ["storage", "declarativeNetRequest"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/tapir-16.png",
      "32": "icons/tapir-32.png",
      "48": "icons/tapir-48.png",
      "128": "icons/tapir-128.png"
    }
  }
}
